{
  "openapi": "3.1.0",
  "info": {
    "title": "InsightFlow MCP Server API",
    "description": "MCP (Model Context Protocol) server for managing projects, stacks, roadmaps, tasks, and subtasks",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local development server (default - will be replaced dynamically based on API_BASE_URL or SERVER_URL environment variable)"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase authentication token"
      }
    },
    "schemas": {
      "Tool": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "inputSchema": {
            "type": "object"
          }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Project UUID"
          },
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Project name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "Project description"
          },
          "status": {
            "type": "string",
            "enum": ["active", "completed", "archived"],
            "default": "active",
            "description": "Project status"
          },
          "database_schema": {
            "type": "object",
            "nullable": true,
            "description": "Database schema as JSONB object"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "Owner user UUID"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "name", "user_id", "created_at", "updated_at"]
      },
      "Stack": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Stack UUID"
          },
          "project_id": {
            "type": "string",
            "format": "uuid",
            "description": "Parent project UUID"
          },
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Stack name"
          },
          "technology": {
            "type": "string",
            "nullable": true,
            "maxLength": 255,
            "description": "Technology name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "Stack description"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "project_id", "name", "created_at", "updated_at"]
      },
      "Roadmap": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Roadmap UUID"
          },
          "project_id": {
            "type": "string",
            "format": "uuid",
            "description": "Parent project UUID"
          },
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Roadmap name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "Roadmap description"
          },
          "status": {
            "type": "string",
            "enum": ["draft", "active", "completed"],
            "default": "draft",
            "description": "Roadmap status"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "project_id", "name", "created_at", "updated_at"]
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Task UUID"
          },
          "roadmap_id": {
            "type": "string",
            "format": "uuid",
            "description": "Parent roadmap UUID"
          },
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Task name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "Task description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "blocked"],
            "default": "pending",
            "description": "Task status"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "default": "medium",
            "description": "Task priority"
          },
          "due_date": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Due date timestamp"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "roadmap_id", "name", "created_at", "updated_at"]
      },
      "Subtask": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Subtask UUID"
          },
          "task_id": {
            "type": "string",
            "format": "uuid",
            "description": "Parent task UUID"
          },
          "name": {
            "type": "string",
            "maxLength": 255,
            "description": "Subtask name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "maxLength": 1000,
            "description": "Subtask description"
          },
          "completed": {
            "type": "boolean",
            "default": false,
            "description": "Completion status"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        },
        "required": ["id", "task_id", "name", "created_at", "updated_at"]
      }
    }
  },
