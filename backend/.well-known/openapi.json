{
  "openapi": "3.1.0",
  "info": {
    "title": "InsightFlow MCP Server API",
    "description": "MCP (Model Context Protocol) server for managing projects, stacks, roadmaps, tasks, and subtasks",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local development server"
    },
    {
      "url": "https://your-domain.com",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase authentication token"
      }
    },
    "schemas": {
      "Tool": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "inputSchema": {
            "type": "object"
          }
        }
      }
    }
  },
  "paths": {
    "/mcp/tools": {
      "get": {
        "summary": "Get available MCP tools",
        "description": "Returns a list of all available MCP tools",
        "operationId": "getTools",
        "tags": ["Tools"],
        "responses": {
          "200": {
            "description": "List of available tools",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tools": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Tool"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
